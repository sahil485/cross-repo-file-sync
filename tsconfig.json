{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "lib": ["ES2022"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./lib",
      "rootDir": ".",                              
      "moduleResolution": "NodeNext"
    },
    "include": [
      "actions/**/*.ts",
    ],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  